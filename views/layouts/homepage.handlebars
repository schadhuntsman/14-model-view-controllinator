<ol class="post-list">
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post_content}}" target="_blank">{{title}}</a>
                <span>({{post_content}})</span>
            </div>
            <div class="meta">
                {{blog_post}} point(s) by {{user.username}} on 
                {{created_at}}
                |
                <a href="/post{{id}}">{{comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
</ol>
<ol class="post-list">
    {{#each post as |post|}}
    <li>
        {{> post-info post }}
    </li>
    {{/each}}
</ol>

module.exports = router;